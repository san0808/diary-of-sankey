# Notion Integration (Required)
NOTION_API_KEY=ntn_your_notion_integration_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Note: Notion tokens use ntn_ prefix for new integrations (legacy secret_ tokens still work)

# Site Configuration (Required)
SITE_URL=https://diaryofsankey.com
AUTHOR_NAME=Sanket Bhat
BLOG_TITLE=Diary of Sankey
AUTHOR_BIO=Your bio description here
AUTHOR_TWITTER=@your_twitter
AUTHOR_GITHUB=your_github_username
AUTHOR_LINKEDIN=your_linkedin_username

# Build Configuration
NODE_ENV=production
BUILD_DIR=dist
CONTENT_DIR=content

# Optional: Real-time Updates
WEBHOOK_SECRET=your_webhook_secret_for_notion

# Optional: Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Optional: Performance
ENABLE_IMAGE_OPTIMIZATION=true
ENABLE_LAZY_LOADING=true
ENABLE_SERVICE_WORKER=true

# Optional: Development
DEBUG=false
HOT_RELOAD=true
DEV_PORT=3000
PREVIEW_PORT=3001

# Optional: Deployment
NETLIFY_AUTH_TOKEN=your_netlify_token
NETLIFY_SITE_ID=your_netlify_site_id
DEPLOY_BRANCH=main

# Optional: Content Settings
POSTS_PER_PAGE=10
ENABLE_COMMENTS=false
ENABLE_SEARCH=true
ENABLE_RSS=true
ENABLE_SITEMAP=true 