  "license": "MIT",
  "dependencies": {
    "@notionhq/client": "^2.2.15",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "image-size": "^1.0.2",
    "inquirer": "^8.2.6",
    "marked": "^9.1.6",
    "node-html-parser": "^6.1.12",
    "notion-to-md": "^3.1.1",
    "open": "^8.4.2",
    "ora": "^5.4.1",
    "rss": "^1.2.2",
    "sharp": "^0.32.6",
    "sitemap": "^7.1.1",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
