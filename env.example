# Notion Integration (Required)
NOTION_API_KEY=your_notion_integration_key
NOTION_DATABASE_ID=your_database_id

# Note: Notion tokens use ntn_ prefix for new integrations (legacy secret_ tokens still work)

# Site Configuration (Required)
SITE_URL=https://your-blog.vercel.app
AUTHOR_NAME=Sanket Bhat
BLOG_TITLE=Diary of Sankey
AUTHOR_BIO=Just love tinkering things around
AUTHOR_EMAIL=your-email@example.com
AUTHOR_TWITTER=SanketBhat11
AUTHOR_GITHUB=san0808
AUTHOR_LINKEDIN=sanket-bhat-286a1a1b7

# Build Configuration
NODE_ENV=production
BUILD_DIR=dist
CONTENT_DIR=content

# Optional: Real-time Updates
WEBHOOK_SECRET=your_webhook_secret_for_notion

# Optional: Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Alternative Analytics Options (choose one or multiple)
# Plausible Analytics (privacy-focused, GDPR compliant)
ENABLE_PLAUSIBLE=false
PLAUSIBLE_DOMAIN=your-domain.com

# Vercel Analytics (built-in with Vercel hosting)
ENABLE_VERCEL_ANALYTICS=true

# Simple Analytics (privacy-focused)
ENABLE_SIMPLE_ANALYTICS=false

# Custom Analytics (for other providers)
ENABLE_CUSTOM_ANALYTICS=false
CUSTOM_ANALYTICS_CODE=

# Optional: Performance
ENABLE_IMAGE_OPTIMIZATION=true
ENABLE_LAZY_LOADING=true
ENABLE_SERVICE_WORKER=true

# Optional: Smart 404
ENABLE_SEMANTIC_404=false
EMBEDDINGS_PROVIDER=openai
OPENAI_API_KEY=your_openai_key

# Optional: Development
DEBUG=false
HOT_RELOAD=true
DEV_PORT=3000
PREVIEW_PORT=3001
DEV_INCLUDE_DRAFTS=false  # Set to true to include Draft posts locally (lists + pages)

# Optional: Deployment
NETLIFY_AUTH_TOKEN=your_netlify_token
NETLIFY_SITE_ID=your_netlify_site_id
DEPLOY_BRANCH=main

# Optional: Content Settings
POSTS_PER_PAGE=10
ENABLE_COMMENTS=false
ENABLE_SEARCH=true
ENABLE_RSS=true
ENABLE_SITEMAP=true

# Robots control
# If set to true, robots.txt will disallow all crawling (useful for previews)
NO_INDEX=false

# Vercel Deployment (set in Vercel dashboard)
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=auto-generated-by-vercel 